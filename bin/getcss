#!/usr/bin/env node

const program = require('commander');
const normalizeUrl = require('normalize-url');
const getCss = require('..');

program
  .version('0.0.1')
  .command('* <url>')
  .action((url) => {
    if (url) {
      url = normalizeUrl(url, { stripWWW: false });
      getCss(url, { verbose: true }).then((css) => {
        console.log(css.css);
      });
    }
  });

program.parse(process.argv);
